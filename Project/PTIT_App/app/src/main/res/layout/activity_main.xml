<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#41becc"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/images"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Thới khóa biểu"
            android:layout_weight="8"
            android:background="#40becc"
            android:gravity="center"
            android:textColor="#ffffff"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/image1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#42becc">
        <TextView
            android:id="@+id/txtVieưDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#42becc"
            android:gravity="center"
            android:textColor="#ffffff"
            android:paddingLeft="70dp"
            android:layout_weight="8"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/images2"
            android:background="#42becc"/>

    </LinearLayout>
    <TextView
        android:id="@+id/txtViewMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#42becc"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textAlignment="center"/>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="#41becc"
        app:compactCalendarTextColor="#fff"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#6edbe7"
        app:compactCalendarCurrentDayBackgroundColor="#41becc"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        />


</LinearLayout>